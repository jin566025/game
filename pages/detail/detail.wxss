.content{width: 100%;height: 100%;position: relative;}
.bg-img{position: fixed;width:100%;height: 100vh;z-index: -1;}
.main{padding-bottom: 30rpx;}
.number{color: #ffffff;font-size: 28rpx;width: 100%;text-align: right;padding: 15rpx 20rpx;margin-bottom: 40rpx;}
.text1{color: #ffffff;font-size: 50rpx;line-height: 60rpx;width: 100%;text-align: center;}

.sections{width: 520rpx;margin: 0 auto;margin-top: 90rpx;}
.section{width: 520rpx;height: 92rpx;position: relative;margin-bottom: 50rpx;}
.section-img{width: 520rpx;height: 92rpx;}
.section-text{width: 520rpx;height: 92rpx;line-height: 92rpx;position: absolute;top:0;left: 0;text-align: center;color: #ffffff;font-size: 30rpx;}

.form{width: 588rpx;height: 86rpx;margin: 30rpx auto 50rpx auto;background-color: #ffffff;border-radius: 86rpx;}
.form-icon{width: 40rpx;height: 40rpx;margin: 0 30rpx;}
.form-plac{color: #000000;font-size: 35rpx;}
.form-input{color: #000000;font-size: 35rpx;}

.finish-btn{position: relative;width: 370rpx;height: 85rpx;border-radius: 85rpx;margin: 0 auto;}
.finish-img{width: 370rpx;height: 85rpx;}
.finish-text{color: #ffffff;width: 370rpx;height: 85rpx;font-size: 38rpx;text-align: center;line-height: 85rpx;font-weight: bold;position: absolute;top: 0;left: 0;}