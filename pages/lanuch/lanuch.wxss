/**index.wxss**/
.container{width: 100%;}
.content{width:700rpx;margin: 0 auto;}
.title{}
.title-icon{width: 60rpx;height:60rpx;margin-right: 10rpx;}
.title{color: #000000;font-size: 32rpx;margin-bottom: 30rpx;}

.activity-content{width: 100%;}
.activity-section{margin-bottom: 40rpx;}
.activity-section-top{position: relative;width: 700rpx;height:250rpx;border-radius: 10rpx;box-shadow: 0px 2px 17px 0px rgba(42, 98, 255, 0.69);}
.activity-section-banner{width: 700rpx;height:250rpx;}
.activity-section-text{position: absolute;bottom: 10rpx;right: 10rpx;color: #ffffff;font-size: 24rpx;}
.activity-section-mid{margin-top: 28rpx;}
.activity-section-name{font-size: 32rpx;color: #000;margin-right: 10rpx;font-weight: bold;width: 180rpx;}
.activity-section-time{font-size: 28rpx;color: #000;padding-top: 5rpx;}
.activity-section-btn{position: absolute;top: 10rpx;right: 10rpx;width: 84rpx;height: 34rpx;line-height:34rpx;background-color: #3cd568;box-shadow: 0px 2px 10px 0px rgba(15, 217, 145, 0.77);border-radius: 34rpx;font-size: 18rpx;color: #fff;text-align: center;}
.activity-section-icon{width: 40rpx;height: 40rpx;}
.activity-section-invitation{color: #328cff;font-size: 28rpx;margin-left: 10rpx;}
.activity-section-over{background-color: #4a4a4a;}
.activity-section-bottom{margin-top: 20rpx;}
.activity-section-bottom-part{margin: 0 30rpx;padding: 10rpx 0;}
.activity-section-bottom-icon{width: 40rpx;height: 40rpx;}
.activity-section-bottom-text{font-size: 18rpx;color: #328cff;}

.dialog{position: fixed;transform:translateY(-50%);top: 50%;width: 100%;height: 300rpx;background-color: #fff;box-shadow: 0px 2px 21px 0px rgba(73, 95, 255, 0.52);z-index: 999;}
.dialog-content{width: 620rpx;margin: 0 auto;}
.dialog-text{color: #577cf9;font-size: 24rpx;margin: 46rpx 0 10rpx 0;}
.dialog-copy{width: 100%;border: solid 4rpx #5979fc;height: 80rpx;color: #0163ff;font-size: 24rpx;justify-content: space-between;padding: 10rpx 30rpx;border-radius: 10rpx;}
.dialog-btn{color: #ffffff;font-size: 24rpx;margin: 0 auto;margin-top: 30rpx;width: 170rpx;text-align: center;line-height: 60rpx;height: 60rpx;background-image: linear-gradient(90deg, #5a76fe 0%, #33dab7 100%);box-shadow: 0px 2rpx 25rpx 0px rgba(1, 99, 255, 0.35);border-radius: 7rpx;}
.share-btn{border: none;padding: 0;line-height: 0;font-size: 18rpx;background-color: #fff;color: #328cff;height: 40rpx;width: 150rpx;}
.shadow{width: 100%;height: 100%;position: fixed;top: 0;background-color: rgba(0,0,0,0.4);z-index: 998;}
.dialog-copybtn{width: 100rpx;text-align: right;}
.dialog-address{width: 450rpx;}