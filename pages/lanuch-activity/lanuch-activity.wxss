/* pages/lanuch-activity/lanuch-activity.wxss */
.content{width: 100%;}
.content-bg{text-align: center;}
.content-bg-title{font-size: 30rpx;color: #000;margin-top: 24rpx;}
.content-bg-desc{font-size: 24rpx;color: #999999;margin-top: 24rpx;}

.shadow{position: fixed;top: 0;width: 100%;height: 100%;background-color: rgba(0,0,0,0.3);z-index: 998;}

.dialog{position: fixed;bottom: 0;height: 840rpx;background-color: #fff;z-index: 999;width: 100%;}
.dialog-content{width: 670rpx;margin: 0 auto;}
.dialog-inputs{width: 100%;height: 95rpx;padding: 0 28rpx;background-color: #ffffff;box-shadow: 0px 2px 25px 0px rgba(1, 99, 255, 0.26);border-radius: 10rpx;margin-top: 25rpx;}
.dialog-inputs:first-child{margin-top: 70rpx;}
.dialog-inputs-left{color: #000000;font-size: 32rpx;}
.dialog-inputs-right{height: 95rpx;font-size: 28rpx;color: #000000;line-height: 95rpx;padding-left: 20rpx;}
.dialog-btn{color: #ffffff;font-size: 32rpx;text-align: center;line-height: 80rpx;width: 530rpx;height: 80rpx;margin: 0 auto;margin-top: 60rpx;background-image: linear-gradient(90deg, #5a76fe 0%, #33dab7 100%);box-shadow: 0px 2rpx 25rpx 0px rgba(1, 99, 255, 0.35);border-radius: 7rpx;}
.dates{text-align: center;}